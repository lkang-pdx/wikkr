<h1>Wikis Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @wikis.each do |wiki| %>
    <li>
      <h3>
        <%= link_to wiki.title, controller: "wikis", action: "show", id: wiki._id%>
      </h3>
    </li>
  <% end %>
</ul>
